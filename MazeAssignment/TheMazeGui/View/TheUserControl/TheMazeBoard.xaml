<UserControl x:Class="TheMazeGui.View.TheUserControl.TheMazeBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheMazeGui.View.TheUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Viewbox  StretchDirection="Both" Stretch="Uniform" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto">
        <Border BorderBrush="Black" BorderThickness="5">
            <Canvas x:Name="MazeCanvas" Width="500" Height="500" ></Canvas>
        </Border>
    </Viewbox>
</UserControl>
